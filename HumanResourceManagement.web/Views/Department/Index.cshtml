@model List<DepartmentViewModel>

<table class="table">
    <thead>
        <tr>
            
            <td>Name</td>
            <td>Established Date</td>
            <td>Descriptions</td>
            <td></td>

        </tr>
    </thead>
    <tbody>
       @foreach(DepartmentViewModel d in Model)
        {
            <tr>
                <td>@d.Name</td>
                <td>@d.establishedDate.ToString("MMM dd,yyyy")</td>
                <td>@d.Description</td>
                <td>
                    <a href="/department/details/@d.Id" class="bi bi-eye"></a>
                    <a href="/department/edit/@d.Id" class="bi bi-pen"></a>
                    <a href="/department/delete/@d.Id" class="bi bi-trash danger"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
